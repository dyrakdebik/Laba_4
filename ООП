	penny = newfunt * 100 * 2.4;
	penny1 = (int)penny % 12;
	shill = penny / 12;
	shill1 = (int)shill % 20;
	funt1 = (int)shill / 20;
	cout << endl << funt1 << '.' << shill1 << '.' << penny1;
}





