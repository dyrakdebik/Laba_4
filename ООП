	// /////////////////////////////////______ЗАДАНИЕ №8____////////////////////////////////////
	cout << endl << endl;
	cout << "Задание №8" << endl;
	cout << 1990 << setw(8) << setfill('.') << 135 << endl << 1991 << setw(8) << setfill('.') << 7290 << endl << 1992 << setw(8) << setfill('.') << 11300 << endl << 1993 << setw(8) << setfill('.') << 16200 << endl;
