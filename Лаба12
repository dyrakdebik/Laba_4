#include <stdio.h>
#include <math.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	int a, b, c, v, x, zad;
	char sev;
	setlocale(LC_ALL, "");
	char* arr1[] = { "января", "февраля", "марта", "апреля", "мая", "июня", "июля", "августа", "сентября", "октября", "ноября", "декабря" };
	char* arr2[] = { "первое", "второе", "третье", "четвертое", "пятое", "шестое", "седьмое", "восьмое", "девятое" };
	char* arr3[] = { "одиннадцатое", "двенадцатое", "тринадцатое", "четырнадцатое", "пятнадцатое", "шестнадцатое", "семнадцатое", "восемнадцатое", "девятнадцатое" };
	char* arr4[] = { "десятое", "двадцатое", "тридцатое" };
	char* arr5[] = { "десять", "двадцать", "тридцать", "сорок", "пятьдесят", "шестьдесят", "семьдесят", "восемьдесят", "девяносто" };
	char* arr6[] = { "одно","два","три","четыре","пять","шесть","семь","восемь","девять" };
	char* arr7[] = { "одиннадцать", "двенадцать", "тринадцать", "четырнадцать", "пятнадцать", "шестнадцать", "семнадцать", "восемнадцать", "девятнадцать" };
	char* arr8[] = { "сто","двести","триста","четыреста","пятьсот","шестьсот","семьсот","восемьсот","девятьсот" };
	char* arr9[] = { "один", "два", "три", "четрые", "пять", "шесть", "семь", "восемь", "девять" };
	char* color1[] = { "зеленой", "красной", "желтой", "белой", "черной" };
	char* color2[] = { "зеленого", "красного", "желтого", "белого", "черного" };
	char* anim[] = { "крысы", "коровы", "тигра", "зайца", "дракона", "змеи", "лошади", "овцы", "обезьяны", "курицы", "собаки", "свиньи" };
	printf("Выберите задачу (1-5) - ");
	scanf("%d", &zad);
	if (zad == 1) {
		printf("Введите число - ");
		scanf("%d", &a);
		printf("Введите месяц - ");
		scanf("%d", &b);
		c = a / 10;
		v = a % 10;
		if (c == 0) {
			printf("%s ", arr2[a - 1]);
			printf("%s", arr1[b - 1]);
		}
		if (c != 0 && v == 0) {
			printf("%s ", arr4[c - 1]);
			printf("%s", arr1[b - 1]);
		}
		if (c == 1 && v != 0) {
			printf("%s ", arr3[v - 1]);
			printf("%s", arr1[b - 1]);
		}
		if (c > 1 && v != 0) {
			printf("%s ", arr5[c - 1]);
			printf("%s ", arr2[v - 1]);
			printf("%s", arr1[b - 1]);
		}
	}
	if (zad == 2) {
		printf("Введите изначальное направление(N - север, S - юг ...) - ");
		scanf("%s", &sev);
		printf("Введите команду (0 - вперед, 1 - повернуть налево, -1 - повернуть направо) - ");
		scanf("%d", &a);
		if (sev == 'N') {
			if (a == 1) {
				printf("Запад");
			}
			else if (a == -1) {
				printf("Восток");
			}
			else {
				printf("Север");
			}
		}
		else if (sev == 'W') {
			if (a == 1) {
				printf("Юг");
			}
			else if (a == -1) {
				printf("Север");
			}
			else {
				printf("Запад");
			}
		}
		else if (sev == 'S') {
			if (a == 1) {
				printf("Восток");
			}
			else if (a == -1) {
				printf("Запад");
			}
			else {
				printf("Юг");
			}
		}
		else if (sev == 'E') {
			if (a == 1) {
				printf("Север");
			}
			else if (a == -1) {
				printf("Юг");
			}
			else {
				printf("Восток");
			}
		}
	}
	else if (zad == 3) {
		printf("Введите кол-во заданий (10-40) - ");
		scanf("%d", &a);
		b = a / 10;
		v = a % 10;
		if (v == 0 || v > 4) {
			printf("%s ", arr5[b - 1]);
			if (v == 0) {
				printf("учебных заданий");
			}
			else {
				printf("%s учебных заданий", arr6[v - 1]);
			}
		}
		else if (v == 1) {
			printf("%s одно учебное задание", arr5[b - 1]);
		}
		else {
			printf("%s %s учебных задания", arr5[b - 1], arr6[v - 1]);
		}
	}
	else if (zad == 4) {
		printf("Введите число (100-999) - ");
		scanf("%d", &a);
		b = a / 100;
		c = (a - (b * 100)) / 10;
		v = a % 10;
		printf("%s ", arr8[b - 1]);
		if (c == 1 && v != 0) {
			printf("%s", arr7[v - 1]);
		}
		else if (c > 1 && v != 0) {
			printf("%s %s", arr5[c - 1], arr9[v - 1]);
		}
		else if (c > 1 && v == 0) {
			printf("%s", arr5[c - 1]);
		}
		else if (c < 1 && v != 0) {
			printf("%s", arr9[v - 1]);
		}
		else if (c < 1 && v == 0) {
			printf("%s", arr9[v - 1]);
		}
	}
	else if (zad == 5) {
		printf("Введите год - ");
		scanf("%d", &a);
		b = a % 60;
		c = b / 12;
		v = b % 12;
		if (v - 4 == 3 || v - 4 == 5 || v - 4 == 4) {
			printf("год %s %s", color2[c], anim[v - 4]);
		}
		else {
			printf("год %s %s", color1[c], anim[v - 4]);
		}
	}
	return 0;
}
