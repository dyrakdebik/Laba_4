#include <stdio.h>
#include <math.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
	int a, b, c, v, x, zad;
	char sev;
	char* arr1[] = { "января", "февраля", "марта", "апреля", "мая", "июня", "июля", "августа", "сентября", "октября", "ноября", "декабря" };
	char* arr2[] = { "первое", "второе", "третье", "четвертое", "пятое", "шестое", "седьмое", "восьмое", "девятое" };
	char* arr3[] = { "одиннадцатое", "двенадцатое", "тринадцатое", "четырнадцатое", "пятнадцатое", "шестнадцатое", "семнадцатое", "восемнадцатое", "девятнадцатое" };
	char* arr4[] = { "десятое", "двадцатое", "тридцатое" };
	char* arr5[] = { "двадцать", "тридцать" };
	printf("Выберите задачу (1-5) - ");
	scanf("%d", &zad);
	if (zad == 1) {
		printf("Введите число - ");
		scanf("%d", &a);
		printf("Введите месяц - ");
		scanf("%d", &b);
		c = a / 10;
		v = a % 10;
		if (c == 0) {
			printf("%s ", arr2[a - 1]);
			printf("%s", arr1[b - 1]);
		}
		if (c != 0 && v == 0) {
			printf("%s ", arr4[c - 1]);
			printf("%s", arr1[b - 1]);
		}
		if (c == 1 && v != 0) {
			printf("%s ", arr3[v - 1]);
			printf("%s", arr1[b - 1]);
		}
		if (c > 1 && v != 0) {
			printf("%s ", arr5[c - 2]);
			printf("%s ", arr2[v - 1]);
			printf("%s", arr1[b - 1]);
		}
	}
	if (zad == 2) {
		printf("Введите изначальное направление(C - север, Ю - юг ...) - ");
		scanf("%s", &sev);
		printf("Введите команду (0 - дальше на север, 1 - повернуть налево, -1 - повернуть направо) - ");
		scanf("%d", &a);
		if (sev == 'C') {
			if (a > 0) {
				printf("Запад");
			}
			else if (a < 0) {
				printf("Восток");
			}
			else {
				printf("Север");
			}
		}
		else if (sev == 'З') {
			if (a > 0) {
				printf("Юг");
			}
			else if (a < 0) {
				printf("Север");
			}
			else {
				printf("Запад");
			}
		}
		else if (sev == 'Ю') {
			if (a > 0) {
				printf("Восток");
			}
			else if (a < 0) {
				printf("Запад");
			}
			else {
				printf("Юг");
			}
		}
		else if (sev == 'В') {
			if (a > 0) {
				printf("Север");
			}
			else if (a < 0) {
				printf("Юг");
			}
			else {
				printf("Восток");
			}
		}
	}
}
