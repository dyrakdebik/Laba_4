#include <stdio.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
    int s, k, arr[] = { 12, 11, 0, 7, 77, 35, 11, 603, 909 };
    int i, j;
    int n = sizeof(arr) / sizeof(int);
    for (s = n / 2; s > 0; s = s / 2) {
        for (i = s; i < n; i++) {
            k = arr[i];
            for (j = i; j >= s; j = j - s) {
                if (k < arr[j - s]) 
                    arr[j] = arr[j - s];
                else break;
            }
            arr[j] = k;
        }
    }
    for (i = 0; i < n; i++) {
        printf("arr[%d] = %d\n", i , arr[i]);
    }
} 

--while-- 
#include <stdio.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
    int s, k, arr[] = { 12, 11, 0, 7, 77, 35, 11, 603, 909 };
    int i, j;
    int n = sizeof(arr) / sizeof(int);
    s = n / 2;
    while (s > 0) {
        i = s;
        while (i < n) {
            k = arr[i];
            j = i;
            while (j >= s) {
                if (k < arr[j - s]) {
                    arr[j] = arr[j - s];
                    j = j - s;
                }
                else break;
            }
            arr[j] = k;
            i++;
        }
        s = s / 2;
    }
    for (i = 0; i < n; i++) {
        printf("arr[%d] = %d\n", i , arr[i]);
    }
} 


/////////////////////////////////////
 c модом
#include <stdio.h>
#include <locale.h>


int main() {
	setlocale(LC_ALL, "Russian");
	int i, j, k, l, arr[] = { 1, 2, 45, 7, 17, 0, 10, 11, 9, 5 };
	int a = sizeof(arr) / sizeof(int);
	for (i = 0; i < a - 1; i++) {
		for (j = i + 1, l = i; j < a; j++) {
			if (arr[j] < arr[l])
				l = j;
		}
		k = arr[i];
		arr[i] = arr[l];
		arr[l] = k;
	}
	for (i = 0; i < a; i++)
		printf("%d ", arr[i]);
}
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Russian");
	int i, j, k, l, arr[] = { 1, 2, 45, 7, 17, 0, 10, 11, 9, 5 };
	int a = sizeof(arr) / sizeof(int);
	while (i < a - 1) {
		j = i + 1;
		l = i;
		while (j < a) {
			if (arr[j] < arr[l])
				l = j;
			j++;
		}
		k = arr[i];
		arr[i] = arr[l];
		arr[l] = k;
		i++;
	}
	printf("\n");
	for (i = 0; i < a; i++)
		printf("%d ", arr[i]);
}
