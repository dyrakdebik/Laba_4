#include <stdio.h>
#include <math.h>
#include <locale.h>
#include <time.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
	int arr[100000], i, j, k, n, o, z;
	float opt = 1.247;
	printf("Введите кол-во элементов массива - ");
	scanf("%d", &n);
	printf("Выберите сортировку:\n1.Пузырёк\n2.Расчёска\n3.Вставками\n4.Шелла\n5.Выбором\n6.Гномья\n7.Быстрая\n___");
	scanf("%d", &z);
	for (i = 0; i < n; i++) {
		arr[i] = rand() % 10000;
	}
	if (z == 1) {
		clock_t tic = clock();
		for (i = 0; i < n - 1; i++) {
			for (j = 0; j < n - 1 - i; j++) {
				if (arr[j] > arr[j + 1]) {
					k = arr[j];
					arr[j] = arr[j + 1];
					arr[j + 1] = k;
				}
			}
		}
		for (i = 0; i < n; i++)
			printf("arr[%d] = %d\n", i + 1, arr[i]);
		clock_t toc = clock();
		printf("Время - %f секунд\n", (double)(toc - tic) / CLOCKS_PER_SEC);
	}
	if (z == 2) {
		clock_t tic = clock();
		for (j = n - 1; j >= 1; j /= opt) {
			for (i = 0; i < n - j; i++) {
				if (arr[i] > arr[i + j]) {
					k = arr[i];
					arr[i] = arr[i + j];
					arr[i + j] = k;
				}
			}
		}
		for (i = 0; i < n; i++)
			printf("arr[%d] = %d\n", i + 1, arr[i]);
		clock_t toc = clock();
		printf("Время - %f секунд\n", (double)(toc - tic) / CLOCKS_PER_SEC);
	}
	if (z == 3) {
		clock_t tic = clock();
		for (i = 1; i < n; i++) {
			for (j = i, k = arr[i]; (j > 0) && (arr[j - 1] > k); j--) {
				arr[j] = arr[j - 1];
			}
			arr[j] = k;
		}
		for (i = 0; i < n; i++)
			printf("arr[%d] = %d\n", i + 1, arr[i]);
		clock_t toc = clock();
		printf("Время - %f секунд\n", (double)(toc - tic) / CLOCKS_PER_SEC);
	}
	if (z == 4) {
		clock_t tic = clock();
		for (o = n / 2; o > 0; o = o / 2) {
			for (i = o; i < n; i++) {
				k = arr[i];
				for (j = i; j >= o; j = j - o) {
					if (k < arr[j - o])
						arr[j] = arr[j - o];
					else break;
				}
				arr[j] = k;
			}
		}
		for (i = 0; i < n; i++) 
			printf("arr[%d] = %d\n", i+1, arr[i]);
		clock_t toc = clock();
		printf("Время - %f секунд\n", (double)(toc - tic) / CLOCKS_PER_SEC);
	}
	if (z == 5) {
		clock_t tic = clock();
		for (i = 0; i < n - 1; i++) {
			for (j = i + 1, o = i; j < n; j++) {
				if (arr[j] < arr[o])
					o = j;
			}
			k = arr[i];
			arr[i] = arr[o];
			arr[o] = k;
		}
		for (i = 0; i < n; i++)
			printf("arr[%d] = %d\n", i + 1, arr[i]);
		clock_t toc = clock();
		printf("Время - %f секунд\n", (double)(toc - tic) / CLOCKS_PER_SEC);
	}
	if (z == 6) {
		clock_t tic = clock();
		for (i = 1; i < n; i++) {
			for (j = 2; j < n; j++) {
				if (arr[i - 1] > arr[i]) {
					k = arr[i];
					arr[i] = arr[i - 1];
					arr[i - 1] = k;
					i = i - 1;
				}
			}
		}
		for (i = 0; i < n; i++)
			printf("arr[%d] = %d\n", i + 1, arr[i]);
		clock_t toc = clock();
		printf("Время - %f секунд\n", (double)(toc - tic) / CLOCKS_PER_SEC);
	}
	if (z == 7) {

	}
}
