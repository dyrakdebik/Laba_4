#include <stdio.h>
#include <math.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
	int i=0, k, j=0, o;
	float opt = 1.247;
	int arr[] = { 1, 5, 12, 6, 111, 8, -1, 2423, 86, 32};
	int n = sizeof(arr) / sizeof(int);
	for (o = n - 1; o >= 1; o /= opt) {
		for (i = 0; i < n - o; i++) {
			if (arr[i] > arr[i + o]) {
				k = arr[i];
				arr[i] = arr[i + o];
				arr[i + o] = k;
			}
		}
	}
		
	for (i = 0; i<n; i++) 
		printf("%d ", arr[i]);
}




#include <stdio.h>
#include <math.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
	int i=0, k, j=0, o;
	float opt = 1.247;
	int arr[] = { 1, 5, 12, 6, 111, 8, -1, 2423, 86, 32};
	int n = sizeof(arr) / sizeof(int);
	o = n - 1;
	while (o>=1) {
		i = 0;
		while (i < n - o) {
			if (arr[i] > arr[i + o]) {
				k = arr[i];
				arr[i] = arr[i + o];
				arr[i + o] = k;
			}
			i = i + 1;
		}
		o /= opt;
	}
		
	for (i = 0; i<n; i++) 
		printf("%d ", arr[i]);
}





