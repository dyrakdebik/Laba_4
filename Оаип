#include <stdio.h>
#include <math.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
	int a[] = { 6, 4, 1, 5, 3, 7, 2 }, i = 0, j = 0, k;
	int n = sizeof(a) / sizeof(int);
	while  (i < n - 1) {
		j = i + 1;
		while (j < n) {
			if (a[i] > a[j]) {
				k = a[i];
				a[i] = a[j];
				a[j] = k;
			}
			j++;
		}
		i++;
	}
	for (i = 0; i < n; i++)
		printf("a[%d] = %d\n", i + 1, a[i]);
}








#include <stdio.h>
#include <math.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS 1
int main() {
	setlocale(LC_ALL, "");
	int array[] = { 6, 4, 1, 5, 3, 7, 2 }, i, j, k;
	int n = sizeof(array) / sizeof(int);
	for (i = 0; i < n - 1; i++) {
		for (j = 0; j < n - 1 - i; j++) {
			if (array[j] > array[j + 1]) {
				k = array[j];
				array[j] = array[j + 1];
				array[j + 1] = k;
			}
		}
	}
	for (i = 0; i < n; i++)
		printf("array[%d] = %d\n", i + 1, array[i]);
	}




