/// ///////////////////   №1   ////////////////////////////////////////////
void reversit() {
	int const n = 10;
	char mas[n], bekva;
	int i, j;
	cout << "Введите строку из 10 символов - ";
	cin.get(mas, n);
	cout << endl <<  "Ваша строка - ";
	for (i = 0; i < n; i++) {
		cout << mas[i];
	}
	for (i = 0; i < (n / 2); i++) {
		bekva = mas[i];
		mas[i] = mas[n - i - 1];
		mas[n - i - 1] = bekva;
	}
	cout << "Перевернутая строка - ";
	for (i = 0; i < n; i++) {
		cout << mas[i];
	}
}
