		cout << "Введите имя и номер сотрудника - ";
		cout << endl << "Имя - ";
		cin >> imya;
		cout << endl << "Номер - ";
		cin >> nomer;
	}
	void putdata() {
		cout << endl << endl << imya << endl << nomer;
	}
};
