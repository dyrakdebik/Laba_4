/// ///////////////////   №8    /////////////////////////////////////////////////////////////////////////
class safearay {
private:
	int limit[100];
	bool police(int ind) {
		if (ind >= 0 && ind < 100)
			return true;
		else
			return false;
	}
public:
	void putel(int ind, int val) {
		if (police(ind))
			limit[ind] = val;
		else {
			cout << "Неверный индекс";
			}
	}
	int getel(int ind) {
		if (police(ind))
			return limit[ind];
		else
			cout << "Неверный индекс";
	}
};
/// ///////////////////   №9    /////////////////////////////////////////////////////////////////////////
class queue
{
private:
	enum { MAX = 10 }; // немного нестандартный синтаксис
	int st[MAX]; // стек в виде массива
	int tail, head;
public:
	queue()
	{
		head = -1;
		tail = 0;
	}
	void put(int var) 
	{
		if (head == MAX - 1)
		{
			cout << "Очередь заполнена!" << endl;
		}
		else
		{
			st[++head] = var;
			tail++;
		}
	}
	void get() 
	{
		if (head == -1)
		{
			cout << "Очередь пуста!" << endl;
		}
		else
		{
			cout << st[0] << endl;
			for (int i = 1; i < tail; i++)
			{
				st[i - 1] = st[i];
			}
			head--;
			tail--;
		}
	}
};
/// ///////////////////   №10    /////////////////////////////////////////////////////////////////////////
class matrix
{
private:
	int limit[10][10];
	int strok, stolb;
	bool police(int ind1, int ind2)
	{
		if ((ind1 >= 0 && ind1 <= strok) && (ind2 >= 0 && ind2 <= stolb))
		{
			return true;
		}
		else
		{
			return false;
		}
	}
public:
	matrix()
	{
		cout << "Введите максимальное кол-во строк - "; 
		cin >> strok;
		cout << "Введите максимальное кол-во столбцов - "; 
		cin >> stolb;
		cout << endl;
	}
	void putel(int ind1, int ind2, int val)
	{
		if (police(ind1, ind2))
		{
			limit[ind1][ind2] = val;
		}
		else
		{
			int ind10 = 0, ind20 = 0;
			cout << "Индекс неверный!" << endl << "Введите новый индекс строки - "; 
			cin >> ind10;
			cout << "Введите новый индекс столбца - "; cin >> ind20;
			putel(ind10, ind20, val);
		}
	}
	int getel(int ind1, int ind2)
	{
		if (police(ind1, ind2))
		{
			return limit[ind1][ind2];
		}
		else
		{
			int ind10 = 0, ind20 = 0;
			cout << "Индекс неверный!" << endl << "Введите новый индекс строки - ";
			cin >> ind10;
			cout << "Введите новый индекс столбца - "; cin >> ind20;
			return getel(ind10, ind20);
		}
	}
};
