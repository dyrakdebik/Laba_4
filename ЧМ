#include <iostream>
#include <string>
#include <locale>
#include <ctype.h>
#include <iomanip>
#include <math.h>
#define _CRT_SECURE_NO_WARNINGS 1
using namespace std;
int main() {
	setlocale(LC_ALL, "");
	char  slash = '/', point = '.';
	int i = 0;
	double x, c, a, b, a0, fa, fb, fx = 1, fa1=1, fb1, fx1;
	cout << "Введите начальное значение отрезка - ";
	cin >> a;
	cout << "Введите конечное значение отрезка - ";
	cin >> b;
	cout << "Введите точноть - ";
	cin >> c;
	if (a > b) {
		a0 = a;
		a = b;
		b = a0;
	}
	fa = pow((a - 1), 2) - 0.5 * pow(2.718, a);
	fb = pow((b - 1), 2) - 0.5 * pow(2.718, b);
	cout << endl << "ДИХОТОМИЯ";
	while (fa*fb < 0) {
		x = (b + a) / 2;
		fa = pow((a - 1), 2) - 0.5 * pow(2.718, a);
		fx = pow((x - 1), 2) - 0.5 * pow(2.718, x);
		if (fa * fx >= 0) {
			a = x;
		}
		if (fa * fx < 0) {
			b = x;
		}
		if ((pow((x - 1 - c), 2) - 0.5 * pow(2.718, (x - c)) * (pow((x - 1 + c), 2) - 0.5 * pow(2.718, (x + c))) < 0)) {
			break;
		}
		i++;
		cout << endl << "x - " << x << " f(x) - " << fx << " i - " << i;
	}
	cout << endl << endl << "ИТЕРАЦИИ" << endl;
	i = 0;
	fx = 1;
	cout << "Введите начальное значение отрезка - ";
	cin >> a;
	cout << "Введите конечное значение отрезка - ";
	cin >> b;
	fa = pow((a - 1), 2) - 0.5 * pow(2.718, a);
	fb = pow((b - 1), 2) - 0.5 * pow(2.718, b);
	fa1 = (-0.5 * pow(2.7182818, a) + pow(2, a)) / 2;
	while (fa * fb < 0) {
		fa1 = (-0.5 * pow(2.7182818, a) + pow(a, 2)+1) / 2;
		fx = abs(fa1 - a);
		a = fa1;
		if ((pow((x - 1 - c), 2) - 0.5 * pow(2.718, (x - c)) * (pow((x - 1 + c), 2) - 0.5 * pow(2.718, (x + c))) < 0)) {
			break;
		}
		i++;
		cout << endl << "x - " << fa1 << " i - " << i << " f(x) - " << fx;
	}

}
