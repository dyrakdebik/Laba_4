	if (fa * fb < 0) {
		if (fa * fb < 0)
		i = 0;
		while (true) {
			i++;
			fa1 = (-0.5 * pow(2.7182818, a) + pow(a, 2) + 1) / 2;
			fx = abs(fa1 - a);
